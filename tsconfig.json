{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "lib": ["es2020"],
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
}
